@using HotelUI.Models.Slider

@model SliderUpdateRequest
@{
    ViewData["Title"] = "Create";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Slider</h1>
    </div>
    <div class="row">
        <div class="col-md-8 mx-auto">
            <form class="user" asp-action="edit" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="Description">Description</label>
                    <input asp-for="Description" class="form-control" id="Description" placeholder="Enter No here..">
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
                <div class="form-group">
                    <label for="Order">Order</label>
                    <input asp-for="Order" class="form-control" id="Order" placeholder="Enter No here..">
                    <span class="text-danger" asp-validation-for="Order"></span>
                </div>
                <div class="form-group">
                    <label for="imgInput">Image</label>
                    <input asp-for="File" class="form-control imgInput" placeholder=" ">
                    <input type="hidden" name="ImageUrl" value="@ViewBag.Image" />
                    <div class="preview-box">
                        <img width="200" class="previewImg" src="@ViewBag.Image" />
                    </div>
                    <span class="text-danger" asp-validation-for="File"></span>
                </div>
                <button class="btn btn-outline-success" type="submit">
                    Edit
                </button>
                <a class="btn btn-outline-danger" asp-action="Index">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section scripts {
    @Html.Partial("_ValidationScriptsPartial");
}
