@using HotelUI.Models.Admin

@model AdminCreateRequest
@{
    ViewData["Title"] = "Admin Oluştur";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        /* Formun genel görünümü */
        form {
            background-color: #f8f9fa;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            margin: 0 auto;
        }

        /* Etiketler için stil */
        .form-label {
            font-weight: bold;
            margin-bottom: 8px;
            display: block;
        }

        /* Giriş alanları için stil */
        .form-control {
            border-radius: 4px;
            border: 1px solid #ced4da;
            transition: border-color 0.3s;
            width: 100%;
            padding: 10px;
            box-sizing: border-box;
        }

            /* Odaklanıldığında giriş alanı sınır rengi */
            .form-control:focus {
                border-color: #80bdff;
                box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
                outline: none;
            }

        /* Hata mesajları için stil */
        .text-danger {
            font-size: 0.875em;
            margin-top: 5px;
        }

        /* Buton stili */
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            padding: 10px 15px;
            font-size: 1em;
            font-weight: bold;
            transition: background-color 0.3s, border-color 0.3s;
            color: white;
            border-radius: 4px;
            border: none;
            width: 100%;
            cursor: pointer;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        /* Başlık ve genel sayfa düzeni */
        h1 {
            font-size: 2em;
            font-weight: bold;
            margin-bottom: 20px;
            color: #343a40;
            text-align: center;
        }

        .container {
            margin-top: 50px;
        }
    </style>
</head>
<body>

    <h1>Admin Oluştur</h1>

    <div class="container">
        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="UserName" class="form-label">Kullanıcı Adı</label>
                <input asp-for="UserName" class="form-control" placeholder="Kullanıcı Adınızı Girin" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Şifre</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Şifrenizi Girin" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Oluştur</button>
        </form>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

</body>
</html>
