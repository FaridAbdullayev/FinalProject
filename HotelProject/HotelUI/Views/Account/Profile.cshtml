@using HotelUI.Models.Admin

@model AdminProfileEditRequest
@{
    ViewData["Title"] = "Profil Düzenleme";
}



<div class="content-wrapper">
    <div class="container">
        <form method="post" asp-action="Profile">
            <input type="hidden" name="UserId" value="@ViewBag.UserId" />
            <div class="form-group mb-3">
                <label asp-for="UserName" class="form-label">UserName</label>
                <input asp-for="UserName" class="form-control" placeholder="" />
                <span class="text-danger" asp-validation-for="UserName"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CurrentPassword" class="form-label">CurrentPassword</label>
                <input asp-for="CurrentPassword" type="password" class="form-control" placeholder="" />
                <span class="text-danger" asp-validation-for="CurrentPassword"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NewPassword" class="form-label">NewPassword</label>
                <input asp-for="NewPassword" type="password" class="form-control" placeholder="" />
                <span class="text-danger" asp-validation-for="NewPassword"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ConfirmPassword" class="form-label">ConfirmPassword</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="" />
                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
            </div>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <button type="submit" class="btn btn-primary">Edit</button>
        </form>
    </div>
</div>
@section scripts {
    @Html.Partial("_ValidationScriptsPartial");
}
