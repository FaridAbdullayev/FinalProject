@using HotelUI.Models.Admin

@model AdminProfileEditRequest
@{
    ViewData["Title"] = "Profil Düzenleme";
}



<h1>Profil</h1>

<div class="container">
    <form method="post" asp-action="Profile" asp-controller="Account" asp-route-Id="@ViewBag.Id">
        <div class="form-group mb-3">
            <label asp-for="UserName" class="form-label">UserName</label>
            <input asp-for="UserName" class="form-control" placeholder="" />
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="CurrentPassword" class="form-label">CurrentPassword</label>
            <input asp-for="CurrentPassword" type="password" class="form-control" placeholder="" />
            <span class="text-danger" asp-validation-for="CurrentPassword"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="NewPassword" class="form-label">Yeni Şifre</label>
            <input asp-for="NewPassword" type="password" class="form-control" placeholder="" />
            <span class="text-danger" asp-validation-for="NewPassword"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ConfirmPassword" class="form-label">Yeni Şifreyi Onaylayın</label>
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="" />
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
        </div>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <button type="submit" class="btn btn-primary">Edit</button>
    </form>
</div>

