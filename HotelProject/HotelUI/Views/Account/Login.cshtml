@model LoginRequest
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Star Admin</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="../../node_modules/perfect-scrollbar/dist/css/perfect-scrollbar.min.css" />
    <link rel="shortcut icon" href="../../images/favicon.png" />
</head>

<body class="bg-light">
    <div class="container-scroller">
        <div class="container-fluid">
            @if (TempData["Error"] != null)
            {
                <span style="display:none" id="error-message" data-message="@TempData["Error"]"></span>
            }
            <div class="row justify-content-center align-items-center vh-100">
                <div class="col-lg-4 col-md-6">
                    <div class="card shadow-lg">
                        <div class="card-body px-5 py-5">
                            <h3 class="card-title text-center mb-3">Login</h3>
                            <form method="post">
                                <div class="form-group mb-4">
                                    <input asp-for="UserName" class="form-control p-3" placeholder="Username" required>
                                </div>
                                <div class="form-group mb-4">
                                    <input asp-for="Password" type="password" class="form-control p-3" placeholder="Password" required>
                                </div>
                                <div class="text-danger mb-3" asp-validation-summary="ModelOnly"></div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary btn-lg w-100">LOG IN</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        let errorSpan = document.getElementById("error-message");
        if (errorSpan) {
            alert(errorSpan.getAttribute("data-message"));
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="../../node_modules/perfect-scrollbar/dist/js/perfect-scrollbar.jquery.min.js"></script>
    <script src="../../js/misc.js"></script>
</body>

</html>
