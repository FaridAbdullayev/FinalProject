<body>
    <div class="form-container">
        @if (TempData["Error"] != null)
        {
            <span style="display:none" id="error-message" data-message="@TempData["Error"]"></span>
        }
        <div class="login-container" id="login-container">
            <h1 class="title">Log In</h1>
            <p class="desc">Login to your account to upload or download pictures,videos or music</p>
            <form class="user" method="post">
                <div class="input-container">
                    <input asp-for=UserName placeholder="Enter your UserName">
                </div>
                <div class="input-container">
                    <input asp-for=Password placeholder="Enter your Password">
                </div>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="account-controls">
                   
                    <button>Next <i class="fas fa-solid fa-angle-right"></i></button>
                </div>
            </form>
        </div>
        <div class="placeholder-banner" id="banner">
            <img src="https://img.freepik.com/free-vector/abstract-flat-design-background_23-2148450082.jpg?size=626&ext=jpg&ga=GA1.1.1286474015.1708934801&semt=sph" alt="" class="banner">
        </div>
    </div>

    <script>
        let errorSpan = document.getElementById("error-message");

        if (errorSpan) {
            alert(errorSpan.getAttribute("data-message"))
        }

    </script>
</body>
